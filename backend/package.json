{
  "name": "eduai-asistent-backend",
  "version": "1.0.0",
  "description": "Backend API for EduAI-Asistent platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --forceExit",
    "test:smoke": "jest -c jest.config.js --runInBand --detectOpenHandles",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "db:init": "ts-node src/database/init.ts",
    "db:reset": "ts-node src/database/reset.ts",
    "db:add-tables": "ts-node src/database/add-missing-tables.ts",
    "db:add-conversations": "ts-node src/database/add-conversations.ts",
    "db:add-generated-files": "ts-node src/database/add-generated-files.ts",
    "db:add-sample-credits": "ts-node src/database/add-sample-credits.ts",
    "db:check-schema": "ts-node src/database/check-schema.ts",
    "db:migrate:phase11": "ts-node src/database/run-migration.ts src/database/migrations/phase11_rbac.sql",
    "db:migrate:phase11:fix": "ts-node src/database/run-migration.ts src/database/migrations/phase11_fix_check.sql",
    "db:migrate:phase11:normalize": "ts-node src/database/run-migration.ts src/database/migrations/phase11_normalize_roles.sql",
    "db:migrate:notifications": "ts-node src/database/run-migration.ts src/database/migrations/phase21_notifications.sql",
    "db:migrate:analytics": "ts-node src/database/run-migration.ts src/database/migrations/phase12_analytics_tables.sql",
    "db:migrate:mcp": "ts-node src/database/run-migration.ts src/database/migrations/phase19_mcp_infrastructure.sql",
    "db:seed:notifications": "ts-node src/database/add-notifications-demo.ts",
    "db:update-api-key": "node update-api-key.js",
    "test:health": "cross-env NODE_ENV=test jest src/__tests__/health.test.ts --runInBand"
  },
  "keywords": [
    "education",
    "ai",
    "assistant",
    "teachers",
    "czech"
  ],
  "author": "EduAI-Asistent Team",
  "license": "MIT",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "@types/node-cache": "^4.1.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "openai": "^5.12.0",
    "pg": "^8.11.3",
    "tesseract.js": "^6.0.1",
    "uuid": "^11.1.0",
    "ws": "^8.18.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.5",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
