# Backend Development Dockerfile for EduAI-Asistent
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies for native modules and development tools
RUN apk add --no-cache \
    libc6-compat \
    curl \
    bash \
    git

# Create app user for security (but with sudo-like permissions for dev)
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nodejs -u 1001

# Set environment variables for development
ENV NODE_ENV=development
ENV PATH=/app/node_modules/.bin:$PATH

# Copy package files
COPY package.json package-lock.json* ./

# Install all dependencies (including devDependencies for development)
RUN npm ci

# Copy source code
COPY . .

# Create logs directory
RUN mkdir -p logs && chown -R nodejs:nodejs logs

# Install TypeScript and ts-node globally for development
RUN npm install -g typescript ts-node nodemon

# Change ownership of the app directory to nodejs user
RUN chown -R nodejs:nodejs /app

# Switch to non-root user
USER nodejs

# Expose the port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:3001/api/health || exit 1

# Start the development server with nodemon for hot reload
CMD ["npm", "run", "dev"]
